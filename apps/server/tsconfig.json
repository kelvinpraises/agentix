{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noErrorTruncation": true,
    "outDir": "dist",
    "paths": {
      "/*": ["./*"],
      "@/*": ["./library/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
